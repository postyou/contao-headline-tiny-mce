{
    "name": "postyou/headline-tiny-mce",
    "type": "contao-bundle",
    "description": "HTML headline for Contao",
    "license": "LGPL-3.0+",
    "keywords": [
        "contao",
        "headline",
        "html",
        "tiny-mce"
    ],
    "authors": [
        {
            "name": "POSTYOU Digital- & Filmagentur",
            "homepage": "https://www.postyou.de"
        }
    ],
    "require": {
        "php": "^8.0",
        "contao/core-bundle": "^5.0",
        "contao-components/tinymce4": "^6.1"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.12"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Postyou\\HeadlineTinyMceBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "php-http/discovery": false
        }
    },
    "extra": {
        "contao-manager-plugin": "Postyou\\HeadlineTinyMceBundle\\ContaoManager\\Plugin"
    }
}
